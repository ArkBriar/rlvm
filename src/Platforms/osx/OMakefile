
.PHONY: clean

########
# Rules to compile objc code?

########

LRLFILES[] =
  SDLMain
  FindFont

SDLMain.o: SDLMain.m
	$(CC) $(INCLUDES) $(PREFIXED_INCLUDES) -c $(CCOUT)$@ $<

FindFont.o: FindFont.mm
	$(CC) -x objective-c++ $(CXXFLAGS) $(INCLUDES) $(PREFIXED_INCLUDES) -c $(CCOUT)$@ $<

section
  StaticCLibrary(libRlvmOsx, $(LRLFILES))

########

.DEFAULT: libRlvmOsx$(EXT_LIB)

clean:
  $(RM) *.o *.gch *$(EXT_LIB) *.omc
