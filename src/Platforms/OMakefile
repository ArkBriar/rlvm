
.PHONY: clean

# Make it so we only build the correct os hook.
if $(or $(equal $(OSTYPE), Win32), $(equal $(OSTYPE), WindowsNT))
  DOSUBDIR = 
  export
else
  switch $(shell uname -s)
  case Darwin
    DOSUBDIR = osx
    export
  default
    DOSUBDIR = 
    export
  export

.SUBDIRS: $(DOSUBDIR)
.DEFAULT: $(DOSUBDIR)

########

LIBS += -L/opt/local/lib

clean:
  $(RM) *.o *.gch *$(EXT_LIB) *.omc
