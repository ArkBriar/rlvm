Build-Depends: debhelper (>= 5), libsdl1.2-dev, libfreetype6-dev, zlib1g-dev, libsdl-image1.2-dev, libsdl-mixer1.2-dev, libgl1-mesa-dev, libboost-date-time1.40-dev, libboost-filesystem1.40-dev, libboost-iostreams1.40-dev, libboost-program-options1.40-dev, libboost-serialization1.40-dev, libboost-signals1.40-dev, libboost-thread1.40-dev, libboost1.40-dev, libglew1.5-dev, scons
Standards-Version: 3.7.2

Package: rlvm
Architecture: any
Depends: ${shlibs:Depends}, ${misc:Depends}
Description: RealLive virtual machine clone
 rlvm is a Free Software reimplementation of VisualArt's KK's
 RealLive interpreter, used in the games CLANNAD, Planetarian
 and Kanon. Currently rlvm is only compatible with Planetarian.

