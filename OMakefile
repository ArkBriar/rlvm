# Subdirectories.
# You may want to include some subdirectories in this project.
# If so, define the subdirectory targets and uncomment this section.
#

if $(or $(equal $(OSTYPE), WIN32), $(equal $(OSTYPE), WindowsNT))
  PLATFORMLIBS = OpenGL32.lib GlU32.lib 
  PLATFORMFLAGS = -DWIN32 $(if $(defined-env DEBUG), -MDd -Zi, -MD) -D_CRT_SECURE_NO_DEPRECATE -D_CRT_NONSTDC_NO_DEPRECATE -DNOMINMAX -DGLEW_STATIC
  LD = lib /nologo
  LDOUT = /out:
  export
else
  switch $(shell uname -s)
  case Darwin
    PLATFORMLIBS = -framework Cocoa -framework OpenGL
    PLATFORMFLAGS = -I/sw/include
    export
  default
    # Correct for GNU/Linux, and probably other POSIX-a-likes
    PLATFORMLIBS = -lGL -lGLU
    PLATFORMFLAGS = -DCASE_SENSITIVE_FILESYSTEM
    export
  export

# CCACHE_FOUND = $(CheckProg ccache)
# CXX = $(if $(CCACHE_FOUND), ccache g++, g++)

.SUBDIRS: vendor src test
.PHONY: tags docs

tags:
	find src -name "*.cpp" | xargs etags -
	find src -name "*.cc" | xargs etags -a -
	find src -name "*.hpp" | xargs etags -a -
	find src -name "*.h" | xargs etags -a -
	find vendor -name "*.cpp" | xargs etags -a -
	find vendor -name "*.cc" | xargs etags -a -
	find vendor -name "*.hpp" | xargs etags -a -
	find vendor -name "*.h" | xargs etags -a -

docs:
	doxygen doc/Doxygen.default
