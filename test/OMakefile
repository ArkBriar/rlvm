#if $(not $(defined-env VERBOSE))
#  OMakeFlags(-S --progress)
#  export

CXXFLAGS = --ansi -U__STRICT_ANSI__ -funsigned-char $(if $(defined-env DEBUG), -g, -O2) -I/opt/local/include/

.PHONY: clean

.SUBDIRS: Module_Str_SEEN Module_Mem_SEEN Module_Jmp_SEEN

INCLUDES += ../src
LIBS += ../src/libreallive$(EXT_LIB)

TEST_FILES[] = 
  rlvmTest
  Module_Jmp_TUT
  Module_Str_TUT
  Module_Mem_TUT
  Gameexe_TUT

.DEFAULT: $(CXXProgram rlvmTest, $(TEST_FILES))
rlvmTest$(EXE): ../src/libreallive$(EXT_LIB) Module_Str_SEEN Module_Mem_SEEN Module_Jmp_SEEN

clean:
  $(RM) *.o *.gch *$(EXT_LIB) *.omc rlvmTest$(EXE) rlvmTest$(EXE).stackdump
