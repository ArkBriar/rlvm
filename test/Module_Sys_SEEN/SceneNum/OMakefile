#if $(not $(defined-env VERBOSE))
#  OMakeFlags(-S --progress)
#  export

RLC = rlc
KPRL = kprl

.PHONY: clean

KEPAGOFILES = $(glob *.ke)

%.TXT: %.ke
	$(RLC) $< -o $@

SEEN.TXT: $(replacesuffixes .ke, .TXT, $(KEPAGOFILES))
	$(KPRL) -a $@ SEEN0001.TXT SEEN0248.TXT SEEN0639.TXT

.DEFAULT: SEEN.TXT

clean:
  $(RM) *~ *.TXT *.TXT.uncompressed
