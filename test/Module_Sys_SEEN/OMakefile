#if $(not $(defined-env VERBOSE))
#  OMakeFlags(-S --progress)
#  export

RLC = rlc
KPRL = kprl

.PHONY: clean
.SUBDIRS: SceneNum

KEPAGOFILES = $(glob *.ke)

%.TXT: %.ke
	$(RLC) $< -o seen0001.TXT
	$(KPRL) -a $@ seen0001.TXT
	$(RM) seen0001.TXT

.DEFAULT: $(replacesuffixes .ke, .TXT, $(KEPAGOFILES)) SceneNum

clean:
  $(RM) *~ *.TXT *.TXT.uncompressed
